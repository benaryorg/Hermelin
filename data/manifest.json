{
  "manifest_version": 2,
  "name": "Hermelin",
  "description": "Hermelin Twitter client for Chrome",
  "version": "0.0.2",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.google.com; object-src 'self'",
  "background": {
    "page": "background.html"
  },
  "app": {
    "launch": {
      "local_path": "index.html"
    }
  },
  "icons": {
    "16": "image/ic16_hermelin.png",
    "24": "image/ic24_hermelin.png",
    "128": "image/ic128_hermelin.png"
  },
  "permissions": [
    "<all_urls>",
    "unlimitedStorage",
    "notifications",
    "contextMenus",
    "background",
    "tabs"
  ]
}